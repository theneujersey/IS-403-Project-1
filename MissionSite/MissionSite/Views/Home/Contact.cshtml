
@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>

<p>
    Fill out the form below to send us an email! Select the mission you have a question about and a returned missionary from that mission will get back to you with an answer. Select "Other" to send us a general question.
</p>

<!--Contact Form-->

@using (Html.BeginForm())
{
    <h4>First Name</h4>
    @Html.TextBox("FirstName");
    <h4>Last Name</h4>
    @Html.TextBox("LastName");
    <h4>Email</h4>
    @Html.TextBox("Email");
    <h4>Subject</h4>
    @Html.DropDownList("Subject")
    <h4>Message Body</h4>
    @Html.TextArea("MessageBody")
    <br /><br />
    <input type="submit" value="Submit">
}